div(class='BO-edit-dialogue')

  header
    h2 #{header.title}
    div #{header.subtitle}

  section

    table
      tr
        th
          header Available Columns
          div(class='bo-search')
            i(class='fas fa-window-close')
            input(type='text' placeholder='Search')
        th
          header Displayed Columns
          div(class='bo-search bo-placeholder')
            input(type='text')
      tr
        td(rowspan=2 class='bo-left')
          div(id='tree')
        td(style="height: 1px")
          ul(class='bo-active-columns-frozen')
            each column in frozenColumns
              li(data-id=column.id)
                span(class='bo-column') #{column.title}
      tr
        td
          div(id='tree2' class='bo-right')

  footer
